{
  "connection": "default",
  "collectionName": "post",
  "info": {
    "name": "post",
    "description": "Web app blog posts"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "maxLength": 60,
      "required": true,
      "unique": true,
      "minLength": 50,
      "type": "string"
    },
    "secondaryTitle": {
      "maxLength": 120,
      "required": true,
      "unique": true,
      "minLength": 100,
      "type": "string"
    },
    "slug": {
      "unique": true,
      "required": true,
      "type": "string"
    },
    "body": {
      "required": true,
      "type": "richtext"
    },
    "excerpt": {
      "maxLength": 140,
      "required": true,
      "minLength": 110,
      "type": "text"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "banner": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "isPublished": {
      "required": true,
      "type": "boolean"
    },
    "readTime": {
      "type": "integer"
    },
    "author": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    },
    "category": {
      "model": "category",
      "via": "posts"
    },
    "tags": {
      "collection": "tag",
      "dominant": true,
      "via": "posts"
    }
  }
}