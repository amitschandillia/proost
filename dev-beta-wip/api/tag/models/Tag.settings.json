{
  "connection": "default",
  "collectionName": "tag",
  "info": {
    "name": "tag",
    "description": "Tags for blog articles"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "name": {
      "unique": true,
      "required": true,
      "type": "string"
    },
    "description": {
      "maxLength": 140,
      "required": true,
      "minLength": 110,
      "type": "text"
    },
    "longDescription": {
      "maxLength": 1200,
      "required": true,
      "minLength": 620,
      "type": "richtext"
    },
    "slug": {
      "unique": true,
      "required": true,
      "type": "string"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "posts": {
      "collection": "post",
      "via": "tags"
    }
  }
}